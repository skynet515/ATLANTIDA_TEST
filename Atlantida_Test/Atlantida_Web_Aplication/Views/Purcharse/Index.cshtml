
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>
    <header class="page-header page-header-compact page-header-light border-bottom bg-white mb-4">
        <div class="container-xl px-4">
            <div class="page-header-content">
                <div class="row align-items-center justify-content-between pt-3">
                    <div class="col-auto mb-3">
                        <h1 class="page-header-title">
                            Ingresar Compra
                        </h1>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <div class="row">
        <div class="col-xxl-8">
            <div class="card mb-4">
                <div class="card-header border-bottom">
                    <ul class="nav nav-tabs card-header-tabs" id="dashboardNav" role="tablist">
                        <li class="nav-item me-1"><a class="nav-link navPlan active" id="Elaborar-pill" href="#Elaborar" data-toggle="tab" role="tab" aria-controls="Elaborar" aria-selected="true">Datos Compras</a></li>
                    </ul>
                </div>
                <div class="card-body">
                    <div class="tab-content" id="dashboardNavContent">
                        <div class="tab-pane paneDatosPlanes fade show active" id="Elaborar" role="tabpanel" aria-labelledby="Elaborar-pill">
                            <div class="row">
                                <div class="col-xl-12">
                                    <div class="card mb-4">
                                        <div class="card-header">
                                            Información Compra
                                        </div>
                                        <div class="card-body">
                                            <div class="form-body">
                                                <form id="fmrIngresarCompra">
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <label class="large mb-1" for="slcGrado">Tarjeta: </label>
                                                            <select class="form-control selectSearch" id="slcTarjeta">
                                                                <option selected disabled>--Seleccione--</option>
                                                            </select>
                                                        </div>
                                                    </div>
                                                    <hr />
                                                    <div class="row gx-3 mb-3">
                                                        <div class="col-md-5">
                                                            <label class="large mb-1" for="txtDescripcionCompra">Descripción Compra: </label>
                                                            <input class="form-control" id="txtDescripcionCompra" placeholder="Descripción Compra" />
                                                            <span id="val-cons-txtDescripcionCompra" class="text-danger" hidden>La descripción de la compra es requerida.</span>
                                                        </div>
                                                    </div>
                                                    <div class="row gx-3 mb-3">
                                                        <div class="col-md-5">
                                                            <label class="large mb-1" for="txtMontoCompra">Monto Compra: </label>
                                                            <input type="number" class="form-control" id="txtMontoCompra" placeholder="Monto Compra" />
                                                            <span id="val-cons-txtMontoCompra" class="text-danger" hidden>El monto de la compra es requerida.</span>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-12 text-right mt-4">
                                                        <button class="btn btn-primary" type="button" id="btnGuardarCompra">
                                                            <svg class="svg-inline--fa fa-check fa-w-16 text-white" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="check" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" data-fa-i2svg=""><path fill="currentColor" d="M173.898 439.404l-166.4-166.4c-9.997-9.997-9.997-26.206 0-36.204l36.203-36.204c9.997-9.998 26.207-9.998 36.204 0L192 312.69 432.095 72.596c9.997-9.997 26.207-9.997 36.204 0l36.203 36.204c9.997 9.997 9.997 26.206 0 36.204l-294.4 294.401c-9.998 9.997-26.207 9.997-36.204-.001z"></path></svg>
                                                            Guardar
                                                        </button>
                                                        <button class="btn btn-success" type="button">
                                                            <svg class="svg-inline--fa fa-check fa-w-16 text-white" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="check" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" data-fa-i2svg=""><path fill="currentColor" d="M173.898 439.404l-166.4-166.4c-9.997-9.997-9.997-26.206 0-36.204l36.203-36.204c9.997-9.998 26.207-9.998 36.204 0L192 312.69 432.095 72.596c9.997-9.997 26.207-9.997 36.204 0l36.203 36.204c9.997 9.997 9.997 26.206 0 36.204l-294.4 294.401c-9.998 9.997-26.207 9.997-36.204-.001z"></path></svg>
                                                            Guardar y volver a la lista
                                                        </button>
                                                        <a class="btn btn-danger" href="@Url.Action("Index", "Purcharse")">
                                                            <svg class="svg-inline--fa fa-times fa-w-11 text-white" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="times" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 352 512" data-fa-i2svg=""><path fill="currentColor" d="M242.72 256l100.07-100.07c12.28-12.28 12.28-32.19 0-44.48l-22.24-22.24c-12.28-12.28-32.19-12.28-44.48 0L176 189.28 75.93 89.21c-12.28-12.28-32.19-12.28-44.48 0L9.21 111.45c-12.28 12.28-12.28 32.19 0 44.48L109.28 256 9.21 356.07c-12.28 12.28-12.28 32.19 0 44.48l22.24 22.24c12.28 12.28 32.2 12.28 44.48 0L176 322.72l100.07 100.07c12.28 12.28 32.2 12.28 44.48 0l22.24-22.24c12.28-12.28 12.28-32.19 0-44.48L242.72 256z"></path></svg>
                                                            Cancelar
                                                        </a>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
@Scripts.Render("~/Content/Compras")

